{
  "compilerOptions": {
    "lib": [
      "es2017"
    ],
    "types": [
      "node"
    ],
    "outDir": "dist",
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "noUnusedLocals": false,
    "sourceMap": true,
    "inlineSources": true,
    "module": "commonjs",
    "moduleResolution": "node",    
    "target": "es2017",
    "allowJs": false
  }
}